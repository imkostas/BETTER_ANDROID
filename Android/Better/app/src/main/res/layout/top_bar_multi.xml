<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topBar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_bar_height">

    <ImageView
        android:id="@+id/topBarBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/color_better_dark"/>

    <TextView
        android:id="@+id/leftTextView"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Everything"
        android:textSize="@dimen/top_bar_text_size"
        android:textColor="@color/color_white"
        android:drawableLeft="@drawable/ic_menu_green900_24dp"
        android:drawableStart="@drawable/ic_menu_green900_24dp"
        android:drawablePadding="@dimen/activity_padding_double"
        android:paddingLeft="@dimen/activity_padding"
        android:paddingRight="@dimen/activity_padding"
        android:clickable="true"/>

    <ImageView
        android:id="@+id/rightImageView"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_padding"
        android:src="@drawable/ic_filter_list_green900_24dp"
        android:clickable="true"/>

</FrameLayout>