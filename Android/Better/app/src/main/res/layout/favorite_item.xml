<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_view_favorite_height"
    android:paddingLeft="@dimen/activity_padding"
    android:paddingRight="@dimen/activity_padding_half"
    android:background="@color/color_white">

    <TextView
        android:id="@+id/hashTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#"
        android:textColor="@color/color_some_gray"
        android:textSize="@dimen/list_view_favorite_text_size"/>

    <TextView
        android:id="@+id/tagTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="wedding"
        android:textColor="@color/color_almost_black"
        android:textSize="@dimen/list_view_favorite_text_size"/>

    <ImageView
        android:id="@+id/actionImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_padding_half"
        android:src="@drawable/ic_remove_circle_outline_green_24dp"
        android:clickable="true"/>

</LinearLayout>