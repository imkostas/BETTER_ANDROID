<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_light_light_gray"
    android:orientation="vertical"
    android:layout_gravity="top">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_margin"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginRight="@dimen/activity_margin"
        android:layout_marginBottom="@dimen/activity_margin_quarter"
        android:text="@string/post_tagging_text"
        android:textColor="@color/color_black"
        android:textSize="@dimen/post_tagging_text_size"/>

    <TextView
        android:id="@+id/subTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginRight="@dimen/activity_margin"
        android:layout_marginBottom="@dimen/activity_margin"
        android:text="@string/post_tagging_limit_text"
        android:textColor="@color/color_gray"
        android:textSize="@dimen/post_tagging_text_size"/>

    <LinearLayout
        android:id="@+id/tagsLinearLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin"
        android:background="@color/color_white">

        <org.apmem.tools.layouts.FlowLayout
            android:id="@+id/flowLayout"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_padding"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/color_gray_default" />

        <TextView
            android:id="@+id/tapToAddTextView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:text="TAP TO ADD TAGS"
            android:gravity="center"
            android:textColor="@color/color_almost_black"
            android:textSize="@dimen/list_view_favorite_text_size"
            android:clickable="true"/>

    </LinearLayout>

    <GridView
        android:id="@+id/gridView"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin"
        android:numColumns="3"
        android:scrollbars="none"/>

</LinearLayout>