<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white">

    <View
        android:id="@+id/topSpace"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_margin_half" />

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_padding"
        android:paddingRight="@dimen/activity_padding">

        <ImageView
            android:id="@+id/itemImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_margin_double"
            android:layout_marginEnd="@dimen/activity_margin_double"
            android:src="@drawable/clear_icon"/>

        <TextView
            android:id="@+id/sectionTextView"
            android:gravity="center|start"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="My Votes"
            android:textColor="@color/color_almost_black"
            android:textSize="@dimen/profile_item_text_size"/>

        <TextView
            android:id="@+id/countTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="215"
            android:textColor="@color/color_better_dark"
            android:textSize="@dimen/profile_item_text_size"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron_right_grey600_24dp"/>

    </LinearLayout>

    <View
        android:id="@+id/bottomSpace"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_margin_half" />

    <View
        android:id="@+id/dividerView"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/activity_padding_half"
        android:background="@color/color_gray"/>

</LinearLayout>