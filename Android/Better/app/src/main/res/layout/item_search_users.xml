<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_view_follow_height"
    android:paddingLeft="@dimen/activity_padding"
    android:paddingRight="@dimen/activity_padding"
    android:background="@color/color_white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImageView"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/list_view_follow_icon_size"
        android:layout_height="@dimen/list_view_follow_icon_size"
        android:layout_marginRight="@dimen/activity_margin"
        android:layout_marginEnd="@dimen/activity_margin"
        android:src="@drawable/feed_button_profile_default_f_56dp"
        app:border_width="0dp"/>

    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="USERNAMEHERE"
        android:textAllCaps="true"
        android:textColor="@color/color_almost_black"
        android:textSize="@dimen/list_view_follow_text_size"/>

</LinearLayout>