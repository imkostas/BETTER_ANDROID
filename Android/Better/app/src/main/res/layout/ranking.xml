<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical"
    android:layout_gravity="top">

    <include layout="@layout/top_bar_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/color_white">

        <TextView
            android:id="@+id/myRankingTextView"
            android:text="@string/ranking_my_ranking_text"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="@dimen/ranking_button_height"
            android:layout_weight="1"
            android:textSize="@dimen/ranking_leader_board_text_size"
            android:background="@color/color_better_dark"
            android:clickable="true"/>

        <TextView
            android:id="@+id/leaderBoardTextView"
            android:text="@string/ranking_leader_board_text"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="@dimen/ranking_button_height"
            android:layout_weight="1"
            android:textSize="@dimen/ranking_leader_board_text_size"
            android:background="@color/color_better_dark"
            android:clickable="true"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/indicatorImageView"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:src="@color/color_green_line"
        android:background="@color/color_better_dark"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

</LinearLayout>